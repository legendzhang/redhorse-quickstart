<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp" android:layout_width="40dp"/>
    <TextView android:id="@+id/imageTitle"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:singleLine="true" android:textColor="#000000"/>
</LinearLayout>
