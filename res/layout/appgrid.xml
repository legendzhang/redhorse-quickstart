<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/appgridbody" android:layout_width="wrap_content" android:layout_height="wrap_content" 
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<GridView
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/myGrid"
	  android:padding="10dp"
	  android:verticalSpacing="10dp"
	    
	  android:horizontalSpacing="10dp"
	  android:numColumns="auto_fit"
	  android:columnWidth="60dp"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:stretchMode="columnWidth">
	</GridView>
	<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" 
		xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:padding="1dip">
		<Button android:text="hide"  android:layout_weight="2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Button01"></Button>
		<Button android:text="config" android:layout_weight="2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Button02"></Button>
		<Button android:text="quit" android:layout_weight="2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Button03"></Button>
	</LinearLayout>
</LinearLayout>

