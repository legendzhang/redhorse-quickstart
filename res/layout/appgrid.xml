<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_height="fill_parent"
    android:layout_width="wrap_content" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <GridView android:columnWidth="60dp" android:horizontalSpacing="5dp"
        android:id="@+id/myGrid" android:layout_height="fill_parent"
        android:layout_weight="1" android:layout_width="wrap_content"
        android:numColumns="auto_fit" android:padding="5dp"
        android:stretchMode="columnWidth" android:verticalSpacing="5dp" xmlns:android="http://schemas.android.com/apk/res/android"/>
    <LinearLayout android:gravity="center"
        android:id="@+id/LinearLayout01" android:layout_height="100dp"
        android:layout_weight="1" android:layout_width="fill_parent"
        android:padding="1dip" xmlns:android="http://schemas.android.com/apk/res/android">
        <Button android:id="@+id/weibogrid"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent"
            android:text="微博分享" android:textSize="15dp"/>
        <Button android:id="@+id/Button01"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent"
            android:text="所有程序" android:textSize="15dp"/>
        <Button android:id="@+id/Button02"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent"
            android:text="我的程序" android:textSize="15dp"/>
        <Button android:id="@+id/Button03"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent"
            android:text="退出" android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>
