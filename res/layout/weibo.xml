<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/widget28"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/weibo_btn"
        android:layout_height="fill_parent" android:layout_weight="5"
        android:layout_width="fill_parent" android:orientation="vertical">
        <EditText android:hint="新浪微博用户名"
            android:id="@+id/et_weibo_username"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent" android:textSize="18sp"/>
        <EditText android:hint="新浪微博密码"
            android:id="@+id/et_weibo_password"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent"
            android:password="true" android:textSize="18sp"/>
        <TextView android:editable="false" android:gravity="top"
            android:id="@+id/tv_charcount"
            android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_width="fill_parent"
            android:singleLine="true" android:text="可输入字数：140" android:textSize="18sp"/>
        <EditText android:gravity="top" android:hint="内容"
            android:id="@+id/et_weibo"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_width="fill_parent" android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/weibo_btn"
        android:layout_height="60dp" android:layout_weight="1" android:layout_width="fill_parent">
        <Button android:id="@+id/btn_weibo_send"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:layout_width="fill_parent"
            android:text="发送" android:textSize="15dp"/>
        <Button android:id="@+id/btn_weibo_quit"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:layout_width="fill_parent"
            android:text="退出" android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>
